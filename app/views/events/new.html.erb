<h2>Create event</h2>

<%= form_for(:event) do |f| %>
  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true, placeholder: 'Title', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: 'Description', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.datetime_field :date, placeholder: 'Date', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, placeholder: 'Location description', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street, placeholder: 'Street address', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, placeholder: 'City', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, placeholder: 'State', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, placeholder: 'Postal code', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", {controller: :home, action: :index}, class: "btn btn-default pull-left" %>
    <%= link_to "Create", {controller: :home, action: :index}, class: "btn btn-primary pull-right" %>
    <!--<%= f.submit "Create", class: "btn btn-primary pull-right" %>-->
  </div>
<% end %>